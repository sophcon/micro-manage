
@{
    ViewBag.Title = "RegisterNewItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RegisterNewItem</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.TextBox("SerialId",null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.TextBox("ProductId", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.TextBox("Action", null, new { @class = "form-control" })
    </div>
    <input type="button" value="send" onclick="sendAction()"/>
}


<script>
       

    function sendAction() {

        var values = {
            serialId: $("#SerialId").val(),
            productId: $("#ProductId").val(),
            action: $("#Action").val()
        }

        $.ajax({
            url: "../../Pi/RegisterNewItem",
            type: "POST",
            data: values
        });
    }
</script>