@model MicroManage.Models.Bin

@using (Html.BeginForm("_Create", "Bins", FormMethod.Post, new { @id = "CreateForm" }))
{
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(b => b.Name, new { @class = "form-control",@placeholder="name" })
    </div>
    <div class="form-group">
        <label>Location</label>
        @Html.TextBoxFor(b => b.Location, new { @class = "form-control", @placeholder = "location" })
    </div>
    <div class="form-group">
        <label>Site</label>
        @Html.TextBoxFor(b => b.Site, new { @class = "form-control", @placeholder = "site" })
    </div>
    <div class="form-group">
        <label>Assigned Product</label>
        <select name="AssignedProductId" id="AssignedProductId" class="form-control">
        </select>
    </div>
}
