
<h1>Inventory</h1>
<form class="navbar-form navbar-right form-inline">
        <div class="form-group">
            <input type="text" class="form-control" ng-model="serial" placeholder="Serial Number">
        </div>
        <div class="form-group">
            <select class="form-control" ng-options="product.Id as product.Name for product in products track by product.Id" ng-model="selected"></select>
        </div>
    <div class="form-group">
        <button type="button" ng-click="addProduct()" class="btn btn-primary">add</button>
    </div>
        
    </form>
    <table class="table table-condensed table-responsive">
        <thead>
            <tr>
                <td>Name</td>
                <td>Description</td>
                <td>price</td>
                <td>Quantity</td>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="product in products">
                <td>{{product.Name}}</td>
                <td>{{product.Description}}</td>
                <td>{{product.Price | currency}}</td>
                <td animate-On-Change="product.Count">{{product.Count}}</td>
            </tr>
        </tbody>
    </table>
    <style>
        [animate-on-change] {
            transition: all 1s;
            -webkit-transition: all 1s;
        }

            [animate-on-change].changed {
                background-color: red;
                transition: none;
                -webkit-transition: none;
            }
    </style>


