<h2>Inventory</h2>
<form class="navbar-form navbar-right form-inline">
        <div class="form-group">
            <label>serial</label>
            <input type="text" class="form-control" ng-model="serial" placeholder="serial number">
        </div>
        <div class="form-group">
            <label>Product</label>
            <select class="form-control"ng-init="selected = products[0]" ng-options="product.Id as product.Name for product in products track by product.Id" ng-model="selected"></select>
        </div>
    <div class="form-group">
        <label>bin</label>
        <select class="form-control" ng-init="binName = bins[0]" ng-options="bin.Id as bin.Name for bin in bins track by bin.Id" ng-model="binName"></select>
    </div>
    <div class="form-group">
        <button type="button" ng-click="addProduct()" class="btn btn-primary">add</button>
    </div>
        
</form>
<hr />
    <table class="table table-condensed table-responsive table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Available</th>
                <th>price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="product in products">
                <td>{{product.Name}}</td>
                <td>{{product.Description}}</td>
                <td>{{product.WebAvailable | yesNo}}</td>
                <td>{{product.Price | currency}}</td>
                <td animate-On-Change="product.Count">{{product.Count}}</td>
            </tr>
        </tbody>
    </table>
    <style>
        [animate-on-change] {
            transition: all 1s;
            -webkit-transition: all 1s;
        }

            [animate-on-change].changed {
                background-color: red;
                transition: none;
                -webkit-transition: none;
            }
    </style>


